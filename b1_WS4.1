void display(int num, int den)
{
 printf(" %d/%d ",num,den);   
}
void simplify(int *num, int *den)
{   int numCopy,denCopy,rem=1;
    numCopy=*num;
    denCopy=*den;
    while(rem!=0){
      rem= numCopy%denCopy;
      numCopy=denCopy;
      denCopy=rem;
    }
   *num=*num/numCopy;
   *den=*den/numCopy;
   if(den<0)
   *den=-*den;
   printf("= %d/%d ",*num,*den);  
}
